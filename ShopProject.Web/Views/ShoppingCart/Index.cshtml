
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section footerJS{
<script src="~/assets/client/js/controller/shoppingCart.js"></script>
}
<div class="single_top">
    <div class="single_grid">
        <h4 style="color:#1DBAA5">ThÔNG TIN GIỎ HÀNG</h4>
        <div id="cartContent">
            <table class="table">
                <thead>
                    <tr>
                        <td>STT</td>
                        <td>Tên Sản Phẩm</td>
                        <td>Hình Ảnh</td>
                        <td>Giá</td>
                        <td>Số Lượng</td>
                        <td>Thành Tiền</td>
                        <td>#</td>
                    </tr>
                </thead>
                <tbody id="cartBody">

                </tbody>
            </table>
            <div class="pull-left">
                <button class="btn btn-default" id="btnContinue">Tiếp Tục Mua Hàng</button>
                <button class="btn btn-danger" id="btnDeleteAll">Xóa Giỏ Hàng</button>
                <button class="btn btn-success" id="btnCheckout">Thanh Toán</button>
            </div>
            <div class="pull-right">
                <p style="font-size:16px;font-weight:bold">Tổng Tiền: <span id="lblTotalOrder"></span>vnđ</p> 
            </div>
        </div>
        <div class="clearfix"></div>
        <div id="divCheckout" style="display:none;">
            <div class="reservation_top">
                <div class="contact_right">
                    <h3>Thanh toán</h3>
                    <div class="contact-form">
                        <form method="post" id="frmPayment">
                            @if (Request.IsAuthenticated)
                            {
                                <label>
                                    <input type="checkbox" id="chkUserLoginInfo" />
                                    Sử dụng thông tin đăng nhập
                                </label>
                            }
                            <input type="text" class="textbox" id="txtName" name="name" placeholder="Họ tên">
                            <input type="text" class="textbox" id="txtAddress" name="address" placeholder="Địa chỉ">
                            <input type="text" class="textbox" id="txtEmail" name="email" placeholder="Email">
                            <input type="text" class="textbox" id="txtPhone" name="phone" placeholder="Điện thoại">
                            <textarea value="" id="txtMessage" rows="5" placeholder="Tin Nhắn"></textarea>
                            <div class="alert alert-danger" id="divMessage" style="display:none;"></div>
                            <input type="button" id="btnCreateOrder" class="btn btn-success" value="Hoàn Tất" >
                            <div class="clearfix"> </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

<script id="tplCart" type="x-tmpl-mustache">
<tr>
    <td>{{ProductId}}</td>
    <td><a href="/{{ProductAlias}}.p-{{ProductId}}.html">{{ProductName}}</a></td>
    <td><img src="/fileman/Uploads/Product/{{Image}}" height="50" /></td>
    <td>{{PriceFormat}}</td>
    <td><input type="number" min="0" data-id="{{ProductId}}" data-price="{{Price}}" value="{{Quantity}}" data-quantity="{{QuantityDb}}" class="input txtQuantity" id="dfQuantity_{{ProductId}}"/></td>
    <td id="amount_{{ProductId}}">{{Amount}}</td>
    <td><button class="btn btn-danger btnDeleteItem" data-id="{{ProductId}}"><i class="fa fa-close"></i></button></td>
</tr>
</script>
